<header>
    <nav>
        <div class="nav-mobile">
            <i class="fa-solid fa-bars"></i>
            <a href="/"><img class="header-logo" src="/img/Logo.png" alt="Logo de la marca"></a>
            <div>
                <i class="fa-solid fa-cart-shopping"></i>
                <i class="fa-solid fa-circle-user"></i>
            </div>
            <form>
                <input type="text" placeholder="Buscar...">
                <button class="search-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </div>
        <div class="nav-md-lg">
            <a href="/"><img class="header-logo" src="/img/Logo.png" alt="Logo de la marca"></a>
            <ul class="nav-bar">
                <% if (locals.isLogged && locals.isAdmin) { %>
                    <li>
                        <a href="/products/create/" class="boton-primario vende">
                            <i style="font-size: 14px;" class="fa-solid fa-cart-plus"></i>
                                    Publicar
                        </a>
                    </li>
                <% } %>
            </ul>
            <form action="/products/search" method="post">
                <label>
                    <input type="text" placeholder="Buscar..." name="search">
                    <button class="search-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
                </label>
            </form>
            <ul class="login-bar">
                <li><a href="<%= locals.isLogged ? '/products/cart' : '/users/login' %>"><i class="fa-solid fa-cart-shopping icon-cart"></i></a></li>
                <li class="dropdown">
                    <i class="fa-solid fa-circle-user dropbtn icon-med"></i>
                    <div class="dropdown-content">
                        <% if (locals.isLogged) { %>
                            <a href="/users/profile">Mi perfil</a>
                        <% } %>
                        <% if(locals.isLogged) { %>
                            <a href="/users/logout">Cerrar Sesión</a>
                        <% } else { %>
                            <a href="/users/login">Iniciar Sesión</a>
                            <a href="/users/register">Registrarme</a>
                        <% } %>
                    </div>
                </li>
            </ul>
            <div>
                <i class="fa-solid fa-cart-shopping"></i>
                <i class="fa-solid fa-user"></i>
            </div>
        </div>
    </nav>
</header>